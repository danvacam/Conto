<Page x:Class="Conto.Wpf.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wpf="clr-namespace:Conto.Wpf"
      xmlns:local="clr-namespace:Conto.Wpf.Customer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
	Title="CustomersPage">
    <Page.Resources>
        <ObjectDataProvider x:Key="Customers" ObjectType="{x:Type local:CustomerObjectDataProvider}" MethodName="GetCustomers"/>
    </Page.Resources>
    <Grid>
        <wpf:MainMenuUserControl Margin="10,10,10,266"/>
        <DataGrid Name="DataGrid"
            Margin="0,60,0,0" AutoGenerateColumns="False"
                  ItemsSource="{Binding Source={StaticResource Customers}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Path=Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Indirizzo" Binding="{Binding Path=Address}"></DataGridTextColumn>
                <DataGridTextColumn Header="Codice fiscale" Binding="{Binding Path=FiscalCode}"></DataGridTextColumn>
                <DataGridTextColumn Header="Partita iva" Binding="{Binding Path=VatCode}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
