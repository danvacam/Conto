<UserControl x:Class="Conto.Wpf.CashFlowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Conto.Wpf.ViewModels"
             xmlns:wpf="clr-namespace:Conto.Wpf"
             xmlns:converters="clr-namespace:Conto.Wpf.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="900">
    <UserControl.Resources>
        <converters:CashFlowToVisibilityConverter x:Key="CashFlowToVisibilityConverter" />
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!--<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3" />-->
                    <DoubleAnimation Storyboard.TargetProperty="Width" From="0" To="900" Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <Grid.DataContext>
            <viewModels:CashFlowViewModel />
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Prelievo per cassa" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="{Binding Deposit}" Name="WithdrawTextBox" Grid.Row="0" Grid.Column="1" Height="20" Margin="10,4,0,3"/>
        <Label Content="Data prelievo" Grid.Row="0" Grid.Column="2" />
        <DatePicker SelectedDate="{Binding DepositDate}" Grid.Row="0" Grid.Column="3" Height="25" Margin="10,0,0,0"/>
        <Button Command="{Binding DepositCommand}"  
                Style="{StaticResource ActionButtonStyle}"  Height="30" Width="80" Content="Aggiungi" Grid.Row="0" Grid.Column="4" Margin="10,0" />

        <Label Content="Spesa su cassa" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding Cost}" Grid.Row="1" Grid.Column="1" Height="20" Margin="10,4,0,3" />
        <Label Content="Data spesa" Grid.Row="1" Grid.Column="2" />
        <DatePicker SelectedDate="{Binding CostDate}" Grid.Row="1" Grid.Column="3" Height="25" Margin="10,0,0,0" />
        <Label Content="Giustificativo" Grid.Row="1" Grid.Column="4" />
        <TextBox Text="{Binding CostJustification}" Grid.Row="1" Grid.Column="5" Height="20" Margin="10,4,0,3" />
        <Button Command="{Binding CostCommand}"
                Style="{StaticResource ActionButtonStyle}"  Height="30" Width="80" Content="Aggiungi" Grid.Row="1" Grid.Column="6" Margin="10,0" />



        <Label Content="Anno" Grid.Row="3" Grid.Column="0" />
        <TextBox Text="{Binding SelectedYear}" Grid.Row="3" Grid.Column="1" />
        <Label Content="Mese" Grid.Row="3" Grid.Column="2" />
        <TextBox Text="{Binding SelectedMonth}" Grid.Row="3" Grid.Column="3" />

        <Button Command="{Binding FilterGridCommand}"
                Style="{StaticResource ActionButtonStyle}" Height="30" Width="80" Content="Cerca" Grid.Row="3" Grid.Column="4" />

        <DataGrid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False"
                  ItemsSource="{Binding CashFlows}" x:Name="CashFlowDataGrid"
                  RowStyle="{StaticResource DataGridRowStyle}">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Visibility="Hidden"/>
                <DataGridTextColumn Header="Descrizione" Width="250" Binding="{Binding Description}" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                <DataGridTextColumn Header="Ammontare" Width="80" Binding="{Binding Cash}" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                <DataGridTextColumn Header="Data" Width="65" Binding="{Binding FlowDate}" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>

                <DataGridTemplateColumn Header="Esporta" Width="150" HeaderStyle="{StaticResource DataGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Pdf" Style="{StaticResource ActionButtonStyle}"
                                        Height="30" Width="40"
                                        Command="{Binding DataContext.ExportPdf, ElementName=CashFlowDataGrid}" CommandParameter="{Binding SelectedItem, ElementName=CashFlowDataGrid}"
                                        Visibility="{Binding ., Converter={StaticResource CashFlowToVisibilityConverter}, ConverterParameter=CashFlowType}" />
                                <Button Content="Aggiungi" Style="{StaticResource ActionButtonStyle}"
                                        Height="30" Width="60"
                                        Command="{Binding DataContext.AddSelfInvoiceToPrintCommand, ElementName=CashFlowDataGrid}" CommandParameter="{Binding SelectedItem, ElementName=CashFlowDataGrid}"
                                        Visibility="{Binding ., Converter={StaticResource CashFlowToVisibilityConverter}, ConverterParameter=AddToPdf}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="4" >
            <Label Content="{Binding SelfInvoicePrint}" />
            <ListBox Margin="17,8,15,26" ItemsSource="{Binding SelfInvoicePrintList}" 
                     ItemTemplate="{StaticResource PrintListBoxTemplate}"
                     Style="{StaticResource ListStyle}"/>
            <Button Content="Stampa" Height="30" Width="60" Style="{StaticResource ActionButtonStyle}"
                    Visibility="{Binding SelfInvoicePrintButtonVisibility}" />
        </StackPanel>

        <ListBox Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4" ItemsSource="{Binding CashFlows}" 
                     ItemTemplate="{StaticResource CashFlowListBoxTemplate}" />
        
    </Grid>
</UserControl>
