<Page x:Class="Conto.Wpf.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wpf="clr-namespace:Conto.Wpf"
      xmlns:local="clr-namespace:Conto.Wpf.Materials"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="MaterialsPage">
    <Page.Resources>
        <ObjectDataProvider x:Key="Materials" ObjectType="{x:Type local:MaterialsObjectDataProvider}" MethodName="GetMaterials" />
    </Page.Resources>
    <Grid>
        <wpf:MainMenuUserControl Margin="10,10,10,266"/>
        <DataGrid Name="DataGrid" CanUserAddRows="False"
            Margin="0,60,0,0" AutoGenerateColumns="False"
                  AlternationCount="2"
                  ItemsSource="{Binding Source={StaticResource Materials}}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Id" Binding="{Binding Path=Id}" IsReadOnly="True" />
                <DataGridTextColumn Width="5*" Header="Nome" Binding="{Binding Path=Name}" />
                <DataGridTextColumn Width="2*" Header="Prezzo" Binding="{Binding Path=Price}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>